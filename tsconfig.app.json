{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@_types/*": ["public/types/*"],
      "@_utils/*": ["public/utils/*"],
      "@_fonts/*": ["public/fonts/*"],
      "@_hooks/*": ["public/hooks/*"],
      "@_imgs/*": ["public/imgs/*"],
      "@_test/*": ["public/test/*"],
      "@_routes/*": ["src/routes/*"],
      "@_components/*": ["src/components/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"]
}
